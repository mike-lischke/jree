{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "./lib",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "removeComments": false
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules/**/*.*",
        "lib/**/*.*",
        "tests/**/*.*"
    ],
}
