{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run current Jest test",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--experimental-vm-modules",
                "--no-warnings",
                "${workspaceRoot}/node_modules/.bin/jest",
                "${file}",
                "--no-coverage",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "smartStep": true,
            "trace": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run current example",
            "runtimeExecutable": "ts-node",
            "runtimeArgs": [
                "./src/runner.ts",
                "${file}"
            ],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "sourceMaps": true,
            "smartStep": true,
            "trace": false
        },
    ]
}
